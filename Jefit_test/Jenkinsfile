pipeline {
    agent any

    stages {
        stage('Prepare Allure') {
            steps {
                // Создаём папку для результатов Allure
                bat 'if not exist allure-results mkdir allure-results'
            }
        }

        stage('Restore') {
            steps {
                // Восстановление пакетов NuGet
                bat 'dotnet restore "D:/Kurs/Jefit/QAC07-jefit_autotest/Jefit_test/Jefit_test.sln"'
            }
        }

        stage('Build') {
            steps {
                // Сборка проекта без повторного восстановления
                bat 'dotnet build "D:/Kurs/Jefit/QAC07-jefit_autotest/Jefit_test/Jefit_test.sln" --no-restore'
            }
        }

        stage('Test') {
            steps {
                // Запуск всех тестов с обычным логгером
                // Allure результаты будут генерироваться через NUnit атрибуты
                bat 'dotnet test "D:/Kurs/Jefit/QAC07-jefit_autotest/Jefit_test/Jefit_test.sln" --logger:\"trx;LogFileName=test-result.trx\"'
            }
        }
    }

    post {
        always {
            echo 'Тесты завершены'

            // Публикация Allure отчёта через Allure Plugin
            bat 'allure generate TestResults --clean -o allure-report'
            allure includeProperties: false, results: [[path: 'allure-results']]
        }
    }
}
