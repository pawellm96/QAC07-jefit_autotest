pipeline {
    agent any

    stages {
        stage('Restore') {
            steps {
                bat 'dotnet restore "D:/Kurs/Jefit/QAC07-jefit_autotest/Jefit_test/Jefit_test.sln"'
            }
        }

        stage('Build') {
            steps {
                bat 'dotnet build "D:/Kurs/Jefit/QAC07-jefit_autotest/Jefit_test/Jefit_test.sln" --no-restore'
            }
        }

        stage('Test') {
            steps {
                // Создаём директорию allure-results в Jenkins workspace
                bat 'if not exist allure-results mkdir allure-results'

                // Запускаем тесты и указываем, чтобы Allure adapter сохранял туда результаты
                bat 'dotnet test "D:/Kurs/Jefit/QAC07-jefit_autotest/Jefit_test/Jefit_test.sln" --logger:"console;verbosity=detailed" --results-directory "allure-results"'
            }
        }
    }

    post {
        always {
            // Генерация отчёта из allure-results
            bat 'allure generate allure-results --clean -o allure-report'

            // Публикация отчёта в Jenkins
            script {
                allure([
                    includeProperties: false,
                    jdk: '',
                    results: [[path: 'allure-results']],
                    reportBuildPolicy: 'ALWAYS'
                ])
            }

            archiveArtifacts artifacts: '**/*.trx', allowEmptyArchive: true
        }

        failure {
            echo '❌ Test run failed!'
        }

        success {
            echo '✅ SUCCESS!'
        }
    }
}
