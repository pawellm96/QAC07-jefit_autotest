pipeline {
    agent any

    tools {
        allure 'Allure_2.35.1'
    }

    stages {
        stage('Prepare Allure') {
            steps {
                bat 'if not exist allure-results mkdir allure-results'
            }
        }

        stage('Check workspace') {
            steps {
                bat 'dir' // просто покажет, что Jenkins видит проект из GitHub
            }
        }

        stage('Restore') {
            steps {
                bat 'dotnet restore Jefit_test/Jefit_test.sln'
            }
        }

        stage('Build') {
            steps {
                bat 'dotnet build Jefit_test/Jefit_test.sln --no-restore'
            }
        }

        stage('Test') {
            steps {
                bat 'dotnet test Jefit_test/Jefit_test.sln --no-build --logger:"trx;LogFileName=test-result.trx"'
            }
        }

        stage('Generate Allure Report') {
            steps {
                bat 'allure generate allure-results --clean -o allure-report'
            }
        }
    }

    post {
        always {
            echo 'Test run is finished'
            allure includeProperties: false, results: [[path: 'allure-results']]
        }

        failure {
            echo 'Test run failed!'
        }
    }
}
