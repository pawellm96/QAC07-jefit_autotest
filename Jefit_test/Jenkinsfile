pipeline {
    agent any

    environment {
        SOLUTION_PATH = "Jefit_test/Jefit_test.sln"
        ALLURE_CMD = "D:/Kurs/Allure/allure-2.35.1/bin/allure.bat"
        ALLURE_RESULTS = "allure-results"
        ALLURE_REPORT = "allure-report"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/pawellm96/QAC07-jefit_autotest.git'
            }
        }

        stage('Clean Workspace') {
            steps {
                script {
                    deleteDir()
                }
            }
        }

        stage('Restore dependencies') {
            steps {
                dir('Jefit_test') {
                    bat "dotnet restore Jefit_test.sln"
                }
            }
        }

        stage('Build') {
            steps {
                dir('Jefit_test') {
                    bat "dotnet build Jefit_test.sln --configuration Release"
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir('Jefit_test') {
                    bat """
                        dotnet test Jefit_test.sln ^
                        --logger:"trx;LogFileName=test-result.trx" ^
                        || exit 0
                    """
                    // Копируем .trx в allure-results
                    bat "if not exist ..\\${ALLURE_RESULTS} mkdir ..\\${ALLURE_RESULTS}"
                    bat "copy test-result.trx ..\\${ALLURE_RESULTS} /Y"
                }
            }
        }

        stage('Generate Allure Report') {
            steps {
                bat """
                    if not exist ${ALLURE_RESULTS} mkdir ${ALLURE_RESULTS}
                    "${ALLURE_CMD}" generate ${ALLURE_RESULTS} --clean -o ${ALLURE_REPORT}
                """
            }
        }

        stage('Publish Allure Report') {
            steps {
                allure([
                    includeProperties: false,
                    jdk: '',
                    results: [[path: ALLURE_RESULTS]],
                    reportBuildPolicy: 'ALWAYS'
                ])
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'Jefit_test/TestResults/*.trx', allowEmptyArchive: true
        }
        failure {
            echo 'Test run FAILED!'
        }
        success {
            echo 'Test run SUCCESSFUL!'
        }
    }
}
