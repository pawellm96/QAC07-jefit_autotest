pipeline {
    agent any

    tools {
        // Здесь указываем имя установленного в Jenkins .NET SDK
        dotnet 'dotnet-9.0'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Restore Dependencies') {
            steps {
                dir('Jefit_test') {
                    // Восстановление NuGet пакетов
                    withDotNet(dotNet: 'dotnet-9.0') {
                        sh 'dotnet restore Jefit_test.sln'
                    }
                }
            }
        }

        stage('Build') {
            steps {
                dir('Jefit_test') {
                    withDotNet(dotNet: 'dotnet-9.0') {
                        sh 'dotnet build Jefit_test.sln --configuration Release'
                    }
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir('Jefit_test') {
                    withDotNet(dotNet: 'dotnet-9.0') {
                        sh 'dotnet test Jefit_test.sln --configuration Release --logger "trx;LogFileName=test_results.trx"'
                    }
                }
            }
        }

        stage('Allure Report') {
            steps {
                allure(
                    includeProperties: false,
                    jdk: '',
                    results: [[path: 'Jefit_test/allure-results']]
                )
            }
        }
    }

    post {
        always {
            junit 'Jefit_test/TestResults/*.trx'
        }
    }
}
