pipeline {
    agent any

    tools {
        // Укажите название Allure CLI, которое вы настроили в Jenkins Global Tool Configuration
        allure 'Allure_2.35.1'
    }

    stages {
        stage('Checkout') {
            steps {
                // Git репозиторий указывать не обязательно, Jenkins сам делает checkout
                checkout scm
            }
        }
        stage('Restore') {
            steps {
                bat 'dotnet restore "Jefit_test/Jefit_test.sln"'
            }
        }

        stage('Build') {
            steps {
                bat 'dotnet build "Jefit_test/Jefit_test.sln" --no-restore'
            }
        }

        stage('Test') {
            steps {
                // Запуск тестов без указания trx/console логгера, чтобы AllureListener написал JSON файлы
                bat 'dotnet test "Jefit_test/Jefit_test.sln" --no-build'
            }
        }
        
        
    }

    post {
    always {
	  bat 'allure generate TestResults --clean -o allure-report'
	  script {
	    allure([
      includeProperties: false,
      jdk: '',
      results: [[path: 'TestResults']],
      reportBuildPolicy: 'ALWAYS'
    ])
	  }
	  archiveArtifacts artifacts: '**/*.trx', allowEmptyArchive: true
	}
    failure {
      echo 'Test run is failed!'
    }
    success {
      echo 'SUCCESS!!!'
    }
  }
}
